
@{
    Layout = null;


}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>PolluxUI Admin</title>
    <!-- base:css -->
    <link rel="stylesheet" href="~/Access/Admin/vendors/typicons/typicons.css">
    <link rel="stylesheet" href="~/Access/Admin/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Access/Admin/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Access/Admin/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/Access/Admin/images/logo-dark.svg" alt="logo">
                            </div>
                            <h4>New here?</h4>
                            <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                            @using (Html.BeginForm("SignUp", "Login", FormMethod.Post, new { @class = "pt-3" }))
                            {


                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Username" name="fullname" required>
                                </div><div class="form-group">
                                    
                                    @if(ViewBag.user != null)
                                    {
                                        <input type="email" class="form-control form-control-user form-control-eror" id="exampleInputEmail"
                                               placeholder="@ViewBag.user" name="Email" required />
                                    }
                                    @if(ViewBag.user == null)
                                    {
                                      <input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email" name="Email" required>
                                    }
                                </div><div class="form-group">
                                    <input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password" name="password" required>
                                </div><div class="form-group">
                                    <input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password" name="RepeatPassword" required>
                                </div><div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">
                                            I agree to all Terms & Conditions
                                        </label>
                                    </div>
                                    @if(ViewBag.eror !=null) 
                                    { 
                                      <h3 style=" margin: 40px 0 8px 120px; font-size: 18px; color: red; font-weight: 500;">@ViewBag.eror</h3>
                                    }
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN UP</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a href="login.html" class="text-primary">Login</a>
                                </div>
                            }
                           
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- base:js -->
    <script src="~/Access/Admin/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/Access/Admin/js/off-canvas.js"></script>
    <script src="~/Access/Admin/js/hoverable-collapse.js"></script>
    <script src="~/Access/Admin/js/template.js"></script>
    <script src="~/Access/Admin/js/settings.js"></script>
    <script src="~/Access/Admin/js/todolist.js"></script>
    <!-- endinject -->
</body>

</html>

