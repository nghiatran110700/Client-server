@model Client_Server.Models.entity.category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="content-wrapper">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-md-8 grid-margin stretch-card">
            <div class="card" style="width:600px;">
                <div class="card-body">
                    <h4 class="card-title">Điền thông tin danh mục của sản phẩm</h4>
                    <div class="form-group row">
                        <div class="col">
                            <label>Tên sản phẩm</label>
                            <div id="the-basics">
                                @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control border-form" } })
                                @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                </div>
            </div>
        </div>
    }
    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary btn-rounded btn-fw">Back to list</a>
</div>

