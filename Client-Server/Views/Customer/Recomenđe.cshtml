@model IEnumerable<Client_Server.Models.DTO.RemcomedPro>

<div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @foreach (var item in Model.Take(6))
        {
            <div class="item active">
                <div class="col-sm-4">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <a href="@Url.Action("DetailProduct","Customer", new { id = item.id})">
                                    <img src="~/Access/img/@item.img" alt="" />
                                
                                        <h2>@item.price Đ</h2>
                                
                                    <p>@item.name</p>
                                </a>
                                <a href="@Url.Action("AddtoCart","ShoppingCart", new {id = item.id, size = 38 })" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
